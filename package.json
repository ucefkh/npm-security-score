{
  "name": "npm-security-score",
  "version": "0.1.0",
  "description": "World-class security scoring system for npm packages",
  "main": "src/index.js",
  "bin": {
    "npm-security-score": "./bin/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js' 'tests/**/*.js'",
    "prepare": "husky install"
  },
  "keywords": [
    "npm",
    "security",
    "score",
    "supply-chain",
    "malware-detection",
    "package-security",
    "npm-audit",
    "security-scoring"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:01tek/npm-security-score.git"
  },
  "bugs": {
    "url": "https://github.com/01tek/npm-security-score/issues"
  },
  "homepage": "https://github.com/01tek/npm-security-score#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "gunzip-maybe": "^1.4.2",
    "tar-stream": "^3.1.7"
  }
}
